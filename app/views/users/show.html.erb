<% provide(:title, 'マイページ') %>
<h5>ユーザ情報</h5>

<table>
<tr><th>名前</th><td><%= @user.name %></td></tr>
<tr><th>メールアドレス</th><td><%= @user.email %></td></tr>
<tr><th>都道府県</th><td><%= @user.prefecture.name %></td></tr>
<tr><th>作成日時</th><td><%= @user.created_at %></td></tr>
<tr><th>更新日時</th><td><%= @user.updated_at %></td></tr>
</table>

<%= link_to "変更", edit_user_path(current_user), class: "button" %>
<%= link_to "削除", current_user, method: :delete,
  data: { confirm: "ユーザを削除してよろしいですか？" }, class: "button" %>

<h5>ほしい靴リスト</h5>

<% @user.shoes.each do |shoe| %>
  <%= link_to shoe, style: "text-decoration: none;" do %>
  <div class="shoe">
    <table>
      <tr><th>左サイズ</th><td><%= shoe.left_size %></td></tr>
      <tr><th>右サイズ</th><td><%= shoe.right_size %></td></tr>
      <tr><th>メーカー</th><td><%= shoe.maker %></td></tr>
      <tr><th>商品名</th><td><%= shoe.name %></td></tr>
      <tr><th>ユーザ</th><td><%= shoe.user.name %></td></tr>
    </table>
  </div>
  <% end %>
<% end %>


<% if Rails.env.development? %>
<% end %>
