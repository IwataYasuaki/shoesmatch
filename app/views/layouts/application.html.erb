<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-wdth, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <li><%= link_to current_user.name, current_user %>でログイン中</li>
      <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "ユーザ登録", signup_path %></li>
      <li><%= link_to "ログイン", login_path %></li>
    <% end %>
    <% flash.each do | msg_type, msg | %>
      <div class="alert alert-<%= msg_type %>"><%= msg %></div>
    <% end %>
    <%= yield %>
    <pre><code><%= debug(params) if Rails.env.development? %></code></pre>
  </body>
</html>
