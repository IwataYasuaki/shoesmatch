<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'u-full-width' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'u-full-width' %>

      <%= f.submit "Log in", class: "button-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>


